            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/sniglet"

            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:paddingStart="@dimen/infoPaddingStart"
            android:textSize="@dimen/infoSize"
            android:paddingBottom="@dimen/infoPaddingBottom"


            android:hint="yaprak şekli bilgisi mevcut değil :("
            android:textColor="@color/description_color"


            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/sniglet"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"

            android:text="Yaprak Büyüklüğü"
            android:textColor="@color/title_color"
            android:textSize="@dimen/titleInfoSize"
            android:textStyle="bold"


            />
        <TextView
            android:id="@+id/tv_yaprakBuyuklugu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/sniglet"

            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:paddingStart="@dimen/infoPaddingStart"
            android:textSize="@dimen/infoSize"
            android:paddingBottom="@dimen/infoPaddingBottom"


            android:hint="yaprak büyüklüğü bilgisi mevcut değil :("
            android:textColor="@color/description_color"


            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/sniglet"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"

            android:text="Yaprak Kokusu"
