            android:paddingBottom="@dimen/infoPaddingBottom"


            android:hint="yaprak dokusu bilgisi mevcut değil :("
            android:textColor="@color/description_color"

            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/sniglet"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"

            android:text="Yaprak Rengi"
            android:textColor="@color/title_color"
            android:textSize="@dimen/titleInfoSize"
            android:textStyle="bold"


            />
