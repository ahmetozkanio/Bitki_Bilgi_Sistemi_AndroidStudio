<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/scrollViewPadding"
    android:layout_margin="@dimen/scrollViewMargin"



    tools:context="com.example.bitki_bilgi_sistemi.TableFragments.HabitusFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"

        android:text="Şekli"
        android:textColor="@color/title_color"
        android:textSize="@dimen/titleInfoSize"
        android:textStyle="bold"


        />
    <TextView
        android:id="@+id/tv_sekli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:paddingTop="@dimen/infoPaddingTop"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"
        android:paddingStart="@dimen/infoPaddingStart"
        android:textSize="@dimen/infoSize"
        android:paddingBottom="@dimen/infoPaddingBottom"


        android:hint="şekli bilgisi mevcut değil :("
        android:textColor="@color/description_color"

        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"

        android:text="Boyu"
        android:textColor="@color/title_color"
        android:textSize="@dimen/titleInfoSize"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/tv_boyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:paddingTop="@dimen/infoPaddingTop"
        android:hint="boyu bilgisi mevcut değil :("

        android:lineSpacingExtra="@dimen/lineSpacingExtra"
        android:paddingStart="@dimen/infoPaddingStart"
        android:textSize="@dimen/infoSize"
        android:paddingBottom="@dimen/infoPaddingBottom"


        android:textColor="@color/description_color"

        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"

        android:text="Çapı"
        android:textColor="@color/title_color"
        android:textSize="@dimen/titleInfoSize"
        android:textStyle="bold"


        />
    <TextView
        android:id="@+id/tv_capi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:paddingTop="@dimen/infoPaddingTop"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"
        android:paddingStart="@dimen/infoPaddingStart"
        android:textSize="@dimen/infoSize"
        android:paddingBottom="@dimen/infoPaddingBottom"


        android:hint="çapı bilgisi mevcut değil :("
        android:textColor="@color/description_color"


        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"

        android:text="Dokusu"
        android:textColor="@color/title_color"
        android:textSize="@dimen/titleInfoSize"
        android:textStyle="bold"


        />
    <TextView
        android:id="@+id/tv_dokusu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:paddingTop="@dimen/infoPaddingTop"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"
        android:paddingStart="@dimen/infoPaddingStart"
        android:textSize="@dimen/infoSize"
        android:paddingBottom="@dimen/infoPaddingBottom"


        android:hint="dokusu bilgisi mevcut değil :("
        android:textColor="@color/description_color"


        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"

        android:text="Habıtus Hakkında Notlar"
        android:textColor="@color/title_color"
        android:textSize="@dimen/titleInfoSize"
        android:textStyle="bold"


        />
    <TextView
        android:id="@+id/tv_habitusNotlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/sniglet"
        android:paddingTop="@dimen/infoPaddingTop"
        android:lineSpacingExtra="@dimen/lineSpacingExtra"
        android:paddingStart="@dimen/infoPaddingStart"
        android:textSize="@dimen/infoSize"
        android:paddingBottom="@dimen/infoPaddingBottom"


        android:hint="not bilgisi mevcut değil :("
        android:textColor="@color/description_color"


        />





</LinearLayout>
</ScrollView>