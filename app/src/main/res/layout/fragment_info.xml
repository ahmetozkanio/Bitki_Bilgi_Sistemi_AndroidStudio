<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/infoLayaout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"

    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.example.bitki_bilgi_sistemi.HomeFragments.InfoFragment">

    <ImageButton
        android:onClick="homeBackButton"
        android:id="@+id/homeBack"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/back_icon"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/user" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sniglet"

        android:text="Ahmet Özkan"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
       android:layout_margin="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/iste_arma" />

        <TextView
            android:id="@+id/iste"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/sniglet"
            android:layout_marginStart="6dp"
            android:text="İskenderun Teknik Üniversitesi"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"


            >
            <TextView
                android:id="@+id/ders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sniglet"

                android:text="Ders :"
                android:layout_marginBottom="3dp"
                android:background="@drawable/info_text"
                android:textAlignment="center"
                android:textColor="@color/bg_color"
                android:textSize="17sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/fakulte"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sniglet"

                android:layout_marginBottom="3dp"
                android:text="Fakülte :"
                android:background="@drawable/info_text"
                android:textAlignment="center"
                android:textColor="@color/bg_color"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/bolum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sniglet"

                android:layout_marginBottom="3dp"
                android:text="Bölüm :"
                android:background="@drawable/info_text"
                android:textAlignment="center"
                android:textColor="@color/bg_color"
                android:textSize="17sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/donem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sniglet"

                android:layout_marginBottom="3dp"
                android:text="Dönem :"
                android:background="@drawable/info_text"
                android:textAlignment="center"
                android:textColor="@color/bg_color"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sniglet"

                android:layout_marginBottom="3dp"
                android:text="Öğretim Üyesi :"
                android:background="@drawable/info_text"
                android:textAlignment="center"
                android:textColor="@color/bg_color"
                android:textSize="17sp"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"

            >


            <TextView
                android:id="@+id/ders1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sniglet"

                android:text="Bitirme Projesi II"

                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/fakulte1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sniglet"
                android:layout_marginTop="3dp"
                android:text="Mühendislik ve Doğa Bilimleri Fakültesi"

                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/bolum1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sniglet"

                android:text="Bilgisayar Mühendisliği"
                android:layout_marginTop="5dp"

                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/donem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sniglet"
                android:layout_marginTop="3dp"

                android:text="2020–2021 (Bahar)"

                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sniglet"
                android:layout_marginTop="2dp"

                android:text="Doç. Dr. Yakup KUTLU"

                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/github"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="github"
            android:layout_marginEnd="15dp"
            android:src="@drawable/github" />

        <ImageView
            android:id="@+id/linkedin"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="linkedin"
            android:src="@drawable/linkedin" />


    </LinearLayout>
    <TextView
        android:id="@+id/kaynak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sniglet"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Kaynak :  bitkivt.itu.edu.tr"

        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="italic"
        />
</LinearLayout>
