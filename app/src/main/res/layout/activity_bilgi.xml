<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:paddingStart="18dp"

    android:paddingTop="20dp"
    tools:context="com.example.bitki_bilgi_sistemi.TableFragments.GenelFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <ImageButton
            android:onClick="homeBackButton"
            android:id="@+id/homeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/back_icon"/>

        <androidx.appcompat.widget.SearchView
            android:layout_marginStart="20dp"
         android:id="@+id/search_bar"

         app:queryHint="Bitki Arama"
         app:iconifiedByDefault="false"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"

         android:background="@drawable/search_bar"
         android:layout_width="match_parent"
         android:layout_height="35dp">

     </androidx.appcompat.widget.SearchView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingTop="10dp"
        android:paddingEnd="18dp">
<ListView
    android:id="@+id/listVPlantName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"


    android:background="@drawable/list_view_bg"
    />


    </LinearLayout>


</LinearLayout>

